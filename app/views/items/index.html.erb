<p id="notice"><%= notice %></p>

<h1>Items</h1>

<h2>
  今月の使用料金: <%= @current_month_items.sum(&:price) %>円
</h2>

<h2>
  今日の使用料金: <%= @today_items.sum(&:price) %>円
</h2>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>金額</th>
      <th>購入日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= item.purchased_date %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
